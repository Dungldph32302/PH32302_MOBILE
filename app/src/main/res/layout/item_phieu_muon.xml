<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>


<LinearLayout
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:layout_marginStart="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="PHIẾU MƯỢN SÁCH"/>

    <!-- Mã Phiếu Mượn ở góc trái và chữ mờ hơn -->
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvMaPhieuMuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã Phiếu Mượn: ABC123"
        android:textSize="14sp"
        android:textColor="#777"/>
    <TextView
        android:id="@+id/tvMaThanhVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thành Viên: 12345"
        android:textSize="16sp"
        android:textColor="#777"
        android:textStyle="bold"/>

    <!-- Tên Sách và Mã Thành Viên chữ đậm và to hơn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTenSach"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên Sách: Mắt Biếc"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đã trả"
            android:textSize="16sp"
            android:textColor="#777"/>
    </LinearLayout>

    <!-- Tiền Thuê và Ngày Mượn trên cùng 1 dòng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTienThue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiền Thuê: $10"
            android:textSize="16sp"
            android:textColor="#777"/>

        <TextView
            android:id="@+id/tvNgayMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Mượn: 2023-09-20"
            android:textSize="16sp"
            android:textColor="#777"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btntraSach"
        android:background="@drawable/button2"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="Đã trả "/>

</LinearLayout>

        <ImageView
            android:id="@+id/imgDeletePM"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/baseline_delete_24" />



</LinearLayout>
