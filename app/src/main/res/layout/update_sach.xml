<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentTaoAcc">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Update Sách"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/TvMaSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã: "
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#808080"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Thể Loại: "/>
    <Spinner
        android:id="@+id/spinnerUpdateSachMaTL"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="60dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

      >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtTenSachUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button2"
            android:hint="Tên Sách "
            android:textColorHint="#E91E63" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

      >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtGiaSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button2"
            android:hint="Giá Thuê"
            android:inputType="number"
            android:textColorHint="#E91E63" />
    </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnUpdateSach"
        android:text="Update"
       />

    <Button
        android:layout_marginLeft="30dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btncanel"
        android:text="Cancel"
       />
        </LinearLayout>

</LinearLayout>